<Window x:Class="NoteKeeper.MainEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteKeeper"
        mc:Ignorable="d"
        Title="MainEditor" Height="600" Width="1200">
    <DockPanel>

        <Grid >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="2" DockPanel.Dock="Right" BorderBrush="Purple" BorderThickness="0.5">
                <RichTextBox Grid.Column="2" Margin="10,10,16,20">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="RichTextBox"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Border>

            <TextBox Name="TxbTitle" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="23,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" BorderThickness="1" BorderBrush="purple"/>
            <Button Content="Search" HorizontalAlignment="Left" Margin="23,141,0,0" VerticalAlignment="Top" Height="28" Width="141" />
            <ListView Grid.Column="1" Margin="10,141,10,10" Name="lvNotes" >
                <ListView.View >
                    <GridView  >
                        <GridViewColumn  Width="120" DisplayMemberBinding="{Binding Title}" />
                        <GridViewColumn  Width="120" DisplayMemberBinding="{Binding Title}" />
                    </GridView>
                </ListView.View>
            </ListView>
            <TextBlock Grid.Column="0" HorizontalAlignment="Left" Margin="23,19,0,0" TextWrapping="Wrap" Text="UserId" VerticalAlignment="Top" Height="20" Width="120" />
            <Label Grid.Column="0" Content="Categories " HorizontalAlignment="Left" Margin="20,57,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.394,0.394"/>
            <Button Name="BtnNewNote" Content="New Note" HorizontalAlignment="Left" Margin="65,98,0,0" VerticalAlignment="Top" Height="36" Width="98" Grid.Column="1" Click="BtnNewNote_Click" />
            <Button Name="BtnSave" Content="Save" HorizontalAlignment="Left" Margin="405,497,0,0" VerticalAlignment="Top" Height="36" Width="98" Grid.Column="2" Click="BtnSave_Click" />
            <Button Name="BtnDelete" Content="Delete" HorizontalAlignment="Left" Margin="556,497,0,0" VerticalAlignment="Top" Height="36" Width="98" Grid.Column="2" />

        </Grid>

    </DockPanel>
</Window>
