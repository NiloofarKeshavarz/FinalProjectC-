<Window x:Class="NoteKeeper.MainEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteKeeper"
        mc:Ignorable="d"  ResizeMode="NoResize" 
        Title="MainEditor" Height="620" Width="1200">
    <DockPanel>

        <Grid  Margin="19,50,19,50" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="1.4*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>
            <Border Grid.Column="2" DockPanel.Dock="Right" BorderBrush="Purple" BorderThickness="1">

                <RichTextBox Name="RtxbNewNote" Grid.Column="2" Margin="9,130,21,0" Height="281" VerticalAlignment="Top">
                    <FlowDocument>
                        <Paragraph>
                            <Run Text="RichTextBox"/>
                        </Paragraph>
                    </FlowDocument>
                </RichTextBox>
            </Border>
           <Grid>

                <TextBox Name="TxbSearch" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="23,103,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141"   BorderThickness="1" BorderBrush="purple"/>
                <TextBlock Grid.Column="0" HorizontalAlignment="Left" Margin="23,19,0,0" TextWrapping="Wrap" Text="UserId" VerticalAlignment="Top" Height="20" FontWeight="Medium"  FontSize="16" Width="120" />
                <Button Content="Search" HorizontalAlignment="Left" Margin="23,141,0,0" VerticalAlignment="Top" Height="28" Width="141" />


                <Label Name="LblCategory" Grid.Column="0" Content="Categories " HorizontalAlignment="Left" Margin="20,57,0,0" VerticalAlignment="Top" FontWeight="Medium" FontSize="16" Width="100" RenderTransformOrigin="0.394,0.394"/>
                

            </Grid>
            <ListView Name="lvNote" Grid.Column="1" Margin="10,86,10,10"  SelectionMode="Single" SelectionChanged="lvNote_SelectionChanged" >
                <ListView.View >
                    <GridView  >
                        <GridViewColumn  Width="120" DisplayMemberBinding="{Binding Title}" />
                        <GridViewColumn  Width="120" DisplayMemberBinding="{Binding CreationTime}" />
                    </GridView>
                </ListView.View>
            </ListView>

            <Label Name="LblTitle" Grid.Column="2" Content="Title " HorizontalAlignment="Left" Margin="16,25,0,0" VerticalAlignment="Top" FontWeight="Medium" Width="100" RenderTransformOrigin="0.394,0.394" FontSize="16"/>
            
            <TextBox Grid.Column="2" Margin="121,23,106,435" BorderThickness="1" BorderBrush="purple"></TextBox>
            <Label Name="LblTag" Grid.Column="2" Content="Tag " HorizontalAlignment="Left" Margin="17,77,0,0" VerticalAlignment="Top" FontWeight="Medium" Width="100" RenderTransformOrigin="0.394,0.394" FontSize="16"/>
            <TextBox Grid.Column="2" Margin="122,77,418,383" BorderThickness="1" BorderBrush="purple"></TextBox>
            <Button Name="BtnNewNote" Content="New Note" HorizontalAlignment="Center" Margin="0,33,0,0" VerticalAlignment="Top" Height="36" Width="98" Grid.Column="1" Click="BtnNewNote_Click" />
            <Button Name="BtnSave" Content="Save" HorizontalAlignment="Left" Margin="19,426,0,0" VerticalAlignment="Top" Height="36" Width="98" Grid.Column="2" Click="BtnSave_Click" />
            <Button Name="BtnDelete" Content="Delete" HorizontalAlignment="Left" Margin="147,426,0,0" VerticalAlignment="Top" Height="36" Width="98" Grid.Column="2" />

        </Grid>

    </DockPanel>
</Window>
