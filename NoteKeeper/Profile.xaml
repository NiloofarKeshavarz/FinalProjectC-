<Window x:Class="NoteKeeper.Profile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoteKeeper"
        mc:Ignorable="d"
        Title="Profile" Height="450" Width="800">
    <DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Border BorderBrush="Purple" BorderThickness="1">
                <local:ChangePassword Grid.Row="1" Grid.Column="0" />
            </Border>
        </Grid>
        <Border BorderBrush="Purple" BorderThickness="1">
            <Grid>
                <TextBox Name="TxbSearch" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="31,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="299"   BorderThickness="1" BorderBrush="purple" Height="135"/>
                <TextBlock  HorizontalAlignment="Left" Margin="31,70,0,0" TextWrapping="Wrap" Text="Have You Heared This:" VerticalAlignment="Top" Height="28" FontWeight="Medium" Foreground="Purple" FontSize="20" Width="242" RenderTransformOrigin="0.523,1.728" />
            </Grid>
        </Border>
    </DockPanel>
</Window>
