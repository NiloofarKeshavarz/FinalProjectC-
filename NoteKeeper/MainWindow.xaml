<Window x:Class="NoteKeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:NoteKeeper"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MainWindow"
        Width="300"
        Height="370"
        Background="#FF410A66"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize"
        TextElement.FontSize="13"
        TextElement.FontWeight="Regular"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        mc:Ignorable="d">
    <Window.Resources>
        <local:User x:Key="userData" />
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource userData}" />
    </Window.DataContext>
    <Grid>
        <StackPanel>
            <Border Margin="10,20"
                    Background="WhiteSmoke"
                    CornerRadius="5">
                <StackPanel Margin="25">
                    <TextBlock HorizontalAlignment="Center"
                               Text="Let's get you logged in" />
                    <TextBox Name="TbxUsername"
                             Margin="20"
                             materialDesign:HintAssist.Foreground="Green"
                             materialDesign:HintAssist.Hint="Username"
                             materialDesign:TextFieldAssist.UnderlineBrush="Green"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                        <TextBox.Text>
                            <Binding Path="UserName"
                                     UpdateSourceTrigger="LostFocus">
                                <Binding.ValidationRules>
                                    <local:NotEmptyValidationRule />
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <PasswordBox Name="TbxPassword"
                                 Margin="20"
                                 materialDesign:HintAssist.Foreground="Green"
                                 materialDesign:HintAssist.Hint="Password"
                                 materialDesign:TextFieldAssist.UnderlineBrush="Green"
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}" />
                    <StackPanel HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <Button Margin="15,20"
                                Click="BtnLogin_Click"
                                Content="Login" />
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Center"
                                Orientation="Horizontal">
                        <Label Margin="0,0,0,0"
                               Content="First time here?" />
                        <Button Margin="-15,-5,0,0"
                                Click="BtnRegister_Click"
                                Content="Register"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                ToolTip="MaterialDesignFlatButton" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
